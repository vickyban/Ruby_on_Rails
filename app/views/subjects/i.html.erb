<% @page_title ="All Subjet" %>

<div class="subjects index">
<h1>Subjects#index</h1>
<%= link_to "Add New Subject", new_subject_path , :class => "action new"%>

<table class="listing" summary="Subject list">
    <tr class="header">
        <th>#</th>
        <th>Subject</th>
        <th>Visible</th>
        <th>Pages</th>
        <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
        <td><%= subject.position%></td>
        <td><%= subject.name%></td>
        <td class="center"><%= status_tag(subject.visible) %></td>
        <td class="center"><%= subject.pages.size%></td>
        <td class="acctions">
            <%= link_to "Show", subject_path(subject.id), :class => "action show"%> <!--path = subjects/#{subject.id} or subject_path(subject) cus id is option -->
            <%= link_to "Edit", edit_subject_path(subject), :class => "action edit"%> <!--path subject/#{subject.id}/edit-->
            <%= link_to "Delete", delete_subject_path(subject), :class => "action delete"%>
        </td>
    </tr>
    <%end%>

</table>

</div>