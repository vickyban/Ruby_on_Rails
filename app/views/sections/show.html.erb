

<h1>Sections#show</h1>
<%= link_to "<< Back to List", sections_path, :class => "blank-link"%>
<div class="sections show">
<table summary="Subject detail view">
    <tr>
        <th>Name</th>
        <td><%= @section.name%></td>
    </tr>
    <tr>
        <th>Page</th>
        <td><%= @section.page_id %></td>
    </tr>
    <tr>
        <th>Position</th>
        <td><%= @section.position %></td>
    </tr>
    <tr>
        <th>Visible ?</th>
        <td><%= @section.visible ? "Yes" : "No" %></td>
    </tr>
    <tr>
        <th>content type</th>
        <td><%= @section.content_type %></td>
    </tr>
    <tr>
        <th>Content</th>
        <td><%= @section.content %></td>
    </tr>
    <tr>
        <th>Created</th>
        <td><%= @section.created_at %></td>
    </tr>
    <tr>
        <th>Updated</th>
        <td><%= @section.updated_at %></td>
    </tr>
</table>
</div>
